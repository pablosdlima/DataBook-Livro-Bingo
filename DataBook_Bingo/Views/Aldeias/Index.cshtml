@model IEnumerable<DataBook_Bingo.Models.Aldeia>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeAldeia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaisAldeia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImgAldeia)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeAldeia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaisAldeia)
            </td>
            <td>
                @if (item.ImgAldeia != null)
                {
                    var _img64 = Convert.ToBase64String(item.ImgAldeia);
                    var imgScr = String.Format("data:image/gif;base64,{0}", _img64);
                    <img src="@imgScr" alt="Teste" style="width:10%;" />
                }
            </td>
        </tr>
}
    </tbody>
</table>
