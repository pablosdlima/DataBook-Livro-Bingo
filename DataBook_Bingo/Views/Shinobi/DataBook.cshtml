@model X.PagedList.IPagedList<Shinobi>
@using X.PagedList.Mvc.Core;

<h3 align="center" style="left: 38%; top:11%; position:absolute;" class="col-3 font-weight-light">
        Registros do Databook:
</h3>

<div class="justify-content-center">
    @Html.PagedListPager(Model, pagina => Url.Action("DataBook", new { pagina }))
</div>
@foreach (var item in Model)
{
    <div class="pagina">
        <div class="titulo">
            <ul>
                <li> - @Html.DisplayFor(modelItem => item.NomeShinobi)</li>
                <li>@Html.DisplayFor(modelItem => item.Clas.NomeClas)</li>
            </ul>
        </div>
        <div class="aldeia">
            @if (item.Aldeia.ImgAldeia != null)
            {
                var _img64 = Convert.ToBase64String(item.Aldeia.ImgAldeia);
                var imgScr = String.Format("data:image/gif;base64,{0}", _img64);
                <img src="@imgScr" alt="Teste" />
            }
        </div>
        @if (item.Renegado != 'n')
        {
            <div class="aldeia renegado">
                <img src="~/Imagens/minus.png" />
            </div>
        }
        <div class="aldeia cla">
            @if (item.Clas.ImageClas != null)
            {
                var _img64 = Convert.ToBase64String(item.Clas.ImageClas);
                var imgScr = String.Format("data:image/gif;base64,{0}", _img64);
                <img src="@imgScr" alt="Teste" />
            }
        </div>
        <div class="foto">
            @if (item.ImagemShinobi != null)
            {
                var _img64 = Convert.ToBase64String(item.ImagemShinobi);
                var imgScr = String.Format("data:image/gif;base64,{0}", _img64);
                <img src="@imgScr" alt="Teste" />
            }
        </div>
        <div class="rodape">
            <ul>
                <li>Graduação: @Html.DisplayFor(modelItem => item.Graduacao)</li>
                <li>Especialidade: @Html.DisplayFor(modelItem => item.Especialidade)</li>
                <li>Elemento: @Html.DisplayFor(modelItem => item.Elemento)</li>
            </ul>
        </div>
    </div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

